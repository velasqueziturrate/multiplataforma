{
  "name": "nativescript-drawingpad",
  "main": "drawingpad",
  "typings": "index.d.ts",
  "version": "3.1.0",
  "nativescript": {
    "platforms": {
      "android": "3.0.0",
      "ios": "3.0.0"
    },
    "plugin": {
      "category": "Interface",
      "core3": "true",
      "nan": "true",
      "pan": "true"
    }
  },
  "author": {
    "email": "bradwaynemartin@gmail.com",
    "name": "Brad Martin",
